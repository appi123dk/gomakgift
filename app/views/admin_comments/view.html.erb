<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>제품상세정보</h2>
        <ol class="breadcrumb">
            <li>
                <a href="<%= url_for :controller => 'dashboards', :action => 'dashboard_1' %>">Home</a>
            </li>
            <li>
                <a>Product</a>
            </li>
            <li class="active">
                <strong>Product detail</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
<div class="row">
    <div class="col-lg-12">
        <div class="ibox product-detail">
            <div class="ibox-content">
                <div class="row">
                    <div class="col-md-12">
                        <h4>문의자 정보</h4>
                        <small>Email : <%= @comment.user.email %> | 전화번호 : <%= @comment.user.phone %> </small>
                        <hr>

                        <div style="font-size: 14px; margin-bottom: 30px;">
                            <!-- 내용 : @product.product_story -->
                            내용 : <%= @comment.content %>
                        </div>
                        <form action="/admin_comments/create_reply/<%= @comment.id %>" method="GET" role="form">
                            답변 : 
                            <div class="form-group">
                                <textarea name="content" cols="100" rows="10"></textarea>
                            </div>
                            <button class="btn btn-info">답변완료</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>




</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(window).load(function() {

    $('.product-images').slick({
        dots: true
    });

});

</script>

<% end %>
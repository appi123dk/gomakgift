<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>영역관리</h2>
        <ol class="breadcrumb">
        <li>
            <a href="#">Home</a>
        </li>
        <li>
            <a>AdminAreas</a>
        </li>
        <li class="active">
            <strong>영역관리</strong>
        </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

<!-- 배너관리 TABLE -->
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>배너관리</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>상품id</th>
                                <th>상품명</th>
                                <th>배경이미지</th>
                                <th>상품이미지</th>
                                <th>왼쪽/오른쪽</th>
                                <th>순서</th>
                                <th>노출여부</th>
                                <th>수정</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @banners.each do |banner| %>
                                <tr class="gradeX">
                                    <td><%= banner.product_id %></td>
                                    <td><%= banner.product.title %></td>
                                    <td style="width:50%"><img src="<%= banner.background_url %> " alt="" style="width:100%"></td>
                                    <td style="width:20%"><img src="<%= banner.product_url %> " alt="" style="width:100%"></td>
                                    <td><%= banner.is_left ? "왼쪽" : "오른쪽" %></td>
                                    <td><%= banner.display_order %></td>
                                    <td><%= banner.is_display ? "노출" : "숨김" %></td>
                                    <td><a class="btn btn-xs btn-primary btn-block" href="/admin_areas/edit_banner/<%= banner.id %>" style="margin-bottom: 0px">수정</a></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
<!-- 배너관리 TABLE 끝 -->
<!-- 추천상품영역 관리 시작 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>추천영역관리</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>상품id</th>
                                <th>상품명</th>
                                <th>영역이미지</th>
                                <th>타이틀</th>
                                <th>서브타이틀</th>
                                <th>순서</th>
                                <th>노출여부</th>
                                <th>수정</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @recommends.each do |recommend| %>
                                <tr class="gradeX">
                                    <td><%= recommend.product_id %></td>
                                    <td><%= recommend.product.title %></td>
                                    <td style="width:10%"><img src="<%= recommend.img_url %> " alt="" style="width:100%"></td>
                                    <td><%= recommend.title %></td>
                                    <td><%= recommend.subtitle %></td>
                                    <td><%= recommend.display_order %></td>
                                    <td><%= recommend.is_display ? "노출" : "숨김" %></td>
                                    <td><a class="btn btn-xs btn-primary btn-block" href="/admin_areas/edit_recommend/<%= recommend.id %>" style="margin-bottom: 0px">수정</a></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
<!-- 추천상품영역 관리 끝 -->
<!-- 기획전영역 관리 시작 -->
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>기획전관리</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th>공급사id</th>
                                <th>공급사명</th>
                                <th>메인 중형배너</th>
                                <th>상세화면 배너</th>
                                <th>상세화면 이미지</th>
                                <th>순서</th>
                                <th>노출여부</th>
                                <th>수정</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @themes.each do |theme| %>
                                <tr class="gradeX">
                                    <td><%= theme.supplier_id %></td>
                                    <td><%= theme.supplier.company_name %></td>
                                    <td style="width:30%"><img src="<%= theme.middle_banner %> " alt="" style="width:100%"></td>
                                    <td style="width:20%">
                                        <div style="overflow-y:scroll;overflow-x:hidden; height: 200px;">
                                            <img src="<%= theme.big_banner %> " alt="" style="width:100%">
                                        </div>
                                    </td>
                                    <td style="width:15%">
                                        <div style="overflow-y:scroll;overflow-x:hidden; height: 200px;">
                                            <img src="<%= theme.detail %> " alt="" style="width:100%">
                                        </div>
                                    </td>
                                    <td><%= theme.display_order %></td>
                                    <td><%= theme.is_display ? "노출" : "숨김" %></td>
                                    <td><a class="btn btn-xs btn-primary btn-block" href="/admin_areas/edit_theme/<%= theme.id %>" style="margin-bottom: 0px">수정</a></td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
<!-- 추천상품영역 관리 끝 -->
</div>

<% content_for :javascript do %>

<script type="text/javascript">


$(function() {

    $('.dataTables-example').DataTable({
        order: [0, 'desc'],
        dom: '<"html5buttons"B>lTfgitp',
        buttons: [
            { extend: 'copy'},
            {extend: 'csv'},
            {extend: 'excel', title: 'ExampleFile'},
            {extend: 'print',
                customize: function (win){
                    $(win.document.body).addClass('white-bg');
                    $(win.document.body).css('font-size', '10px');

                    $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                }
            }
        ]

    });

});

</script>

<% end %>
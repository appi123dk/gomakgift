<!-- MAIN CONTENT SECTION -->
<section class="mainContent clearfix m-t-60">
  <div class="container">
    <div class="accordion margin-bottom">
      <div class="page-header" style="border-bottom: 0px">
        <h1>1 : 1 문의내역</h1>
        <div class="small-line" style="margin-left: 0px"></div>
      </div>
      <div class="row">
        <div class="col-xs-12" style="padding-right: 0px">
          <table class="table table-hover inquire-table">
            <thead>
            <tr>
                <th style="border-top: 1px solid black">구분</th>
                <th style="border-top: 1px solid black">내용</th>
                <th style="border-top: 1px solid black">상태</th>
                <th style="border-top: 1px solid black">작성일시</th>
            </tr>
            </thead>
            <tbody>
            <tr class="question">
                <td>인쇄문의</td>
                <td><span class="pie">컬러 인쇄의 경우 시간이 더 오래걸리나요?</span></td>
                <td><span style="color: #fe7732; font-weight: 500">답변완료</span></td>
                <td class="text-navy">2016-01-03, 18:31</td>
            </tr>
            <tr class="answer" style="display:none;">
                <td style="border-right:0px; background-color: rgba(221,221,221,0.3)"></td>
                <td colspan="3" style="text-align: left; padding: 20px 10px; background-color: rgba(221,221,221,0.3);">A. 오래걸립니다~~</td>
            </tr>
            <tr class="question">
                <td>시안문의</td>
                <td><span class="pie">시안은 언제쯤 받아볼 수 있는건가요?</span></td>
                <td><span style="color: gray">확인중</span></td>
                <td class="text-navy">2016-01-03, 18:31</td>
            </tr>
            </tbody>
        </table>
      </div>
    </div>
    <div class="page-header"></div>
    <div class="accordion">
      <div class="page-header" style="border-bottom: 0px; margin-top: 40px; margin-bottom: 0px">
        <h1>문의하기</h1>
        <div class="small-line" style="margin-left: 0px"></div>
      </div>
      <div class="stepsPage col-sm-12" style="border: 1px solid rgba(211,211,211,0.15); padding-top: 20px">
        <form method="GET" class="form-horizontal" role="form">
          <!-- 주문자 정보 입력 -->
          <div class="form-group" style="margin: 0px;">
            <label class="col-sm-1 control-label" style="margin-top: 10px">구분</label>
            <div class="col-sm-9" style="margin-top: 10px">
              <select class="select-custom">
                <option value="0">문의내용을 선택해주세요</option>
                <option value="1">인쇄관련문의</option>
                <option value="2">시안관련문의</option>
                <option value="3">배송관련문의</option>            
              </select>
            </div>
            <div class="col-sm-2" style="margin-top: 10px">
              <button type="submit" class="btn-submit">제출</button>
            </div>
          </div>
          <div class="form-group" style="margin-left: 0px; margin-right: 0px;">
            <label class="col-sm-1 control-label" style="margin-top: 10px">문의내용</label>
            <div class="col-sm-11" style="margin-top: 10px">
              <textarea placeholder="255자 이내로 입력해 주세요" name="" rows="10" style="width:100%; border:1px solid #000000"></textarea>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<% content_for :javascript do %>

<script type="text/javascript">


$(function() {
  $('.question').click(function(){
    $('.answer').css("display", "none");
    $(this).next().css("display" , "");
  });
});

</script>

<% end %>